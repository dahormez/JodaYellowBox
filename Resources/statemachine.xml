<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <statemachine graph="ticketStatus" property_path="state">
        <states>
            <state>open</state>
            <state>approved</state>
            <state>rejected</state>
            <state>reopened</state>
        </states>

        <transitions>
            <transition>
                <name>approve</name>
                <from>open</from>
                <to>approved</to>
            </transition>
            <transition>
                <name>reject</name>
                <from>open</from>
                <to>rejected</to>
            </transition>
            <transition>
                <name>reopen</name>
                <from>rejected</from>
                <to>reopened</to>
            </transition>
        </transitions>
    </statemachine>
</container>
